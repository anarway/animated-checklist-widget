{
  "id": "custom.animated.checklist",
  "title": "Animated Checklist Widget",
  "description": "Checklist with animated progress ring and customizable properties, hosted on GitHub.",
  "vendor": "GitHub Integration",
  "version": "1.0.3",
  "webcomponents": [
    {
      "url": "https://anarway.github.io/animated-checklist-widget/main.js",
      "type": "script"
    },
    {
      "url": "https://anarway.github.io/animated-checklist-widget/main.css",
      "type": "stylesheet"
    }
  ],
  "properties": {
    "listItems": {
      "type": "string[]",
      "title": "Checklist Items",
      "default": [
        "Buy groceries",
        "Finish homework",
        "Walk the dog",
        "Read a book"
      ]
    },
    "ringThickness": {
      "type": "number",
      "title": "Ring Thickness",
      "default": 30
    },
    "ringColor": {
      "type": "string",
      "title": "Ring Color",
      "default": "url(#progressGradient)"
    },
    "animationSpeed": {
      "type": "number",
      "title": "Animation Speed (ms)",
      "default": 600
    },
    "celebrationMessage": {
      "type": "string",
      "title": "Celebration Message",
      "default": "All Entities are Consolidated!"
    }
  },
  "supportedCapabilities": [
    "value"
  ]
}